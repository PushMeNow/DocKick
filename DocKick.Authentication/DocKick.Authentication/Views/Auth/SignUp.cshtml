@model DocKick.DataTransferModels.Users.SignUpModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="row justify-content-center">
    <form class="col-6" asp-action="SignUp" method="post" asp-antiforgery="true">
        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
        <div class="mb-2">
            <label asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control">
        </div>
        <div class="mb-2">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password">
        </div>
        <div class="mb-2">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
        </div>
        <div class="mb-2">
            <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
        @await Component.InvokeAsync("ExternalProviders", new
                                                          {
                                                              returnUrl = Model.ReturnUrl
                                                          })

        <hr/>

        <div>
            If you have account you can login. Just click <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">here</a>.
        </div>

    </form>
</div>