{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DocKickAuthentication": "Server=localhost\\localhost;Database=DocKick.Authentication;Trusted_Connection=True;"
  },
  "Authentication": {
    "TokenSecret": "This is test secret.",
    "AccessTokenLifeTime": 60,
    "RefreshTokenLifeTime": 7,
    "Authority": "https://localhost:5000",
    "MetadataAddress": "https://localhost:5000/.well-known/openid-configuration",
    "Clients": [
      {
        "ClientId": "doc-kick-frontend",
        "ClientUri": "https://localhost:5001",
        "RequireClientSecret": false,
        "AccessTokenLifetime": 3600,
        "IdentityTokenLifetime": 3600,
        "AllowedGrantTypes": [
          "implicit"
        ],
        "AllowAccessTokensViaBrowser": true,
        "AlwaysIncludeUserClaimsInIdToken": true,
        "AccessTokenType": 0,
        "PostLogoutRedirectUris": [
          "https://localhost:5001/logout-callback"
        ],
        "RedirectUris": [
          "https://localhost:5001/login-callback"
        ],
        "AllowedCorsOrigins": [
          "https://localhost:5001"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "api1"
        ],
        "AllowOfflineAccess": true,
        "RequireConsent": false
      }
    ]
  }
}
